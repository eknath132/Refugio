
@{
    ViewBag.Title = "Administrador";
}
<div class="col-md-4"></div>

<div class="col-md-4">
    <div class="col-lg-12">
        <h2> Cambie su contraseña</h2>
    </div>

    <div class="row">
        <form id="frm">
            <div class="col-lg-12">
                Contraseña
                <input type="password" name="pass" style="margin-bottom:20px" class="form-control" />
            </div>
            <div class="col-lg-12">
                Reptir Contraseña
                <input type="password" name="passRepeat" style="margin-bottom:20px" class="form-control" />
            </div>
            <div class="col-lg-12" style="text-align:end">
                <input type="submit" class="btn btn-success" value="Entrar" style="margin-bottom:20px" />
            </div>
        </form>

    </div>
</div>
    <div class="col-md-4"></div>


    @section scripts
{
        <script>
    $(document).ready(function () {
        $( "#frm" ).submit(function (e) {
            e.preventDefault();
            url = "@Url.Content("~/Login/SessionEnter")";
            parametros = $( this ).serialize();

            $.post(url, parametros, function (data) {
                if (data == "Logueado correctamente!") {
                    document.location.href = "@Url.Content("~/Tabla/Index")";
                }
                else {
                    alert(data)
                }
            })
        })
    })
        </script>
    }

