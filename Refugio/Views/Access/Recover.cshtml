
@{
    ViewBag.Title = "Administrador";
}

<div class="col-md-12">
    <div class="row">
        <form id="recover">
            <div class="col-lg-12">
                Email
                <input type="email" name="email" style="margin-bottom:20px" class="form-control" />
            </div>
            <div class="col-lg-12" style="text-align:end">
                <input type="submit" class="btn btn-success" value="Recuperar Contraseña" style="margin-bottom:20px" />
            </div>
        </form>

    </div>
</div>


@section scripts
{
    <script>
    $(document).ready(function () {
        $( "#recover" ).submit(function (e) {
            e.preventDefault();
            url = "@Url.Content("~/Access/RecoverPass")";
            parametros = $( this ).serialize();

            $.post(url, parametros, function (data) {
                if (data == "Contraseña enviada") {
                    document.location.href = "@Url.Content("~/Access/Index")";
                }
                else {
                    alert(data)
                }
            })
        })
    })
    </script>
}