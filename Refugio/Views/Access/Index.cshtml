
@{
    ViewBag.Title = "Administrador";
}
<div class="col-md-4"></div>
<div id="formLogin" class="col-md-4" style="align-items:center">
    <div class="row">
        <form id="frm">
            <div class="col-lg-12">
                Usuario
                <input type="text" name="usuario" style="margin-bottom:20px" class="form-control"/>
             </div>
            <div class="col-lg-12">
                Contraseña
               <input type="password" name="pass" style="margin-bottom:5px" class="form-control"/>
            </div><div class="col-lg-12" style="text-align:center; margin-bottom:20px">
                <a href="~/Access/Recover"> Recuperar contraseña</a>
            </div>
            <div class="col-lg-12" style="text-align:end">
                <input type="submit" class="btn btn-success" value="Entrar"/>
            </div>
        </form>
    </div>
</div>
<div class="col-md-4"></div>


@section scripts
{
    <script>
    $(document).ready(function () {
        $( "#frm" ).submit(function (e) {
            e.preventDefault();
            url = "@Url.Content("~/Access/Enter")";
            parametros = $( this ).serialize();

            $.post(url, parametros, function (data) {
                if (data == "Logueado correctamente, Cambie su usuario y contraseña") {
                    document.location.href = "@Url.Content("~/Login/Index")";
                }
                if (data == "Logueado correctamente!") {
                    document.location.href= "@Url.Content("~/Tabla/Index")"
                }
                alert(data)
            })
        })
    })
    </script>
}

