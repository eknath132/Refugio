@model List<Refugio.Models.SessionLoguin.ListSession>
@{
    ViewBag.Title = "Lista de usuarios";
}

<h1></h1>
<div class="jumbotron" style="background-image:url(../../Imagenes/PORTADA_Articulo.jpg); background-repeat:no-repeat; background-size:cover;">
    <h1 style="color:#ffffff; text-align:center">@ViewBag.Title</h1>
    <br />
    <br />
    <br />
    <br />
    <br />
</div>

<div class="row" style="padding:5px">
    <div style="text-align:right">
        <a href="../Agregar/Nuevo" class="btn btn-primary"> Nuevo</a>
    </div>
    <div class="col-md-12">
        <table class="table">
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Acciones</th>

            </tr>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.ID</td>
                    <td>@user.USUARIO</td>
                    <td>
                        @if (user.USUARIO == "admin")
                        {
                            <a class="btn btn-danger disabled" href="~/Tabla/Eliminar/@user.ID"> Eliminar </a>
                        }
                        else
                        {
                            <a class="btn btn-danger" href="~/Tabla/Eliminar/@user.ID"> Eliminar </a>

                        }

                    </td>
                </tr>
            }

        </table>

    </div>

</div>